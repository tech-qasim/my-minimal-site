---
import { SOCIAL_LINKS } from '~/config.ts'
import SocialLink from './SocialLink.astro'
---

<div class="py-16 px-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
    <div class="text-center md:text-left">
      <h2 class="text-3xl sm:text-4xl tracking-tight">Let's build something great together</h2>
      <p class="text-muted-foreground mt-4 text-lg">
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of an amazing team.
      </p>
    </div>
    <div class="text-center md:text-right">
      <a href="mailto:devmohdqasim@gmail.com" class="text-2xl sm:text-3xl font-semibold text-primary hover:underline">
        devmohdqasim@gmail.com
      </a>
      <div class="flex justify-center md:justify-end gap-6 mt-4">
        {
          SOCIAL_LINKS.map((item) => {
            return <SocialLink href={item.url} icon={item.icon} aria-label={`Link of ${item.name}`} />
          })
        }
      </div>
    </div>
  </div>
</div>
