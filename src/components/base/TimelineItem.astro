---
interface Props {
  company: string
  role: string
  period: string
  location: string
  type: string
  description: string[]
  logo: string
  skills: string[]
}

const { company, role, period, location, type, description, logo, skills } = Astro.props
---

<div class="relative group">
  <!-- Timeline Dot -->
  <span
    class="absolute -left-[41px] md:-left-[60px] top-6 w-5 h-5 md:w-6 md:h-6 bg-gray-200 dark:bg-gray-800 border-4 border-white dark:border-gray-900 rounded-full flex items-center justify-center group-hover:bg-primary group-hover:scale-125 transition-all duration-300"
  >
  </span>

  <div class="relative pl-2 md:pl-0 transition-all duration-300">
    <div class="flex flex-col sm:flex-row gap-4 sm:items-start group-hover:translate-x-1 transition-transform duration-300">
      <!-- Logo -->
      <div
        class="w-12 h-12 md:w-16 md:h-16 bg-cover bg-center rounded-lg flex-shrink-0 border border-gray-100 dark:border-gray-800 bg-white dark:bg-gray-900 shadow-sm"
        style={`background-image: url('${logo}');`}
      >
      </div>

      <!-- Content -->
      <div class="flex-grow min-w-0 pt-1">
        <div class="flex flex-wrap items-center justify-between gap-2 mb-1">
          <div class="flex flex-col">
            <h3 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white leading-tight">
              {company}
            </h3>
            <p class="text-base font-medium text-primary dark:text-gray-300">
              {role}
            </p>
          </div>

          <div class="flex items-center gap-2">
            <span
              class:list={[
                'text-[10px] sm:text-xs font-medium px-2.5 py-1 rounded-full whitespace-nowrap',
                type === 'Full-time'
                  ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-300'
                  : 'bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-300',
              ]}
            >
              {type}
            </span>
          </div>
        </div>

        <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-muted-foreground mb-4">
          <div class="flex items-center gap-1.5">
            <span class="icon-[line-md--calendar] size-4 opacity-70"></span>
            <span>{period}</span>
          </div>
          <div class="flex items-center gap-1.5">
            <span class="icon-[mdi--location] size-4 opacity-70"></span>
            <span>{location}</span>
          </div>
        </div>

        <ul
          class="list-disc pl-5 space-y-2 mb-5 text-gray-600 dark:text-gray-300 text-sm md:text-base leading-relaxed marker:text-gray-400"
        >
          {description.map((point) => <li>{point}</li>)}
        </ul>

        <div class="flex flex-wrap gap-2">
          {
            skills.map((skill) => (
              <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 dark:bg-gray-800/50 text-gray-700 dark:text-gray-300 border border-gray-100 dark:border-gray-800">
                {skill}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
