---
import { SITE, SKILLSSHOWCASE_CONFIG, SOCIAL_LINKS, WORK_EXPERIENCE_CONFIG, PROJECTS_CONFIG } from '~/config.ts'
import { GITHUB_CONFIG, POSTS_CONFIG } from '~/config.ts'
import Layout from '~/layouts/Layout.astro'
import SectionDivider2 from '~/components/base/SectionDivider2.astro'
import GithubContributions from '~/components/base/GithubContributions.tsx'
import SocialLink from '~/components/base/SocialLink.astro'
import List from '~/components/posts/card/List.astro'
import SkillsShowcase from '~/components/base/SkillsShowcase.astro'
import WorkExperience from '~/components/base/WorkExperience.astro'
import ProjectList from '~/components/projects/card/List.astro'
import Contact from '~/components/base/Contact.astro'
import { getNumPosts, getPinnedPosts } from '~/lib/data'


const { ENABLED, GITHUB_USERNAME, TOOLTIP_ENABLED } = GITHUB_CONFIG
const { size, type } = POSTS_CONFIG.homePageConfig
const { SKILLS_ENABLED, SKILLS_DATA } = SKILLSSHOWCASE_CONFIG
const { WORK_EXPERIENCE_ENABLED, WORK_EXPERIENCE_DATA } = WORK_EXPERIENCE_CONFIG
const { PROJECTS_ENABLED, PROJECTS_DATA } = PROJECTS_CONFIG

let showPosts = []
const pinnedPosts = await getPinnedPosts()
const hasPinnedPosts = pinnedPosts.length > 0
if (hasPinnedPosts) {
  showPosts = pinnedPosts
} else {
  showPosts = await getNumPosts(size)
}
---

<Layout title="Readme" description={SITE.description}>
  <div class="relative z-[1]">
    <div id="intro" class="py-8 pb-10 px-6 sm:px-8">
      <h1 class="flex flex-col gap-2">
        <span class="text-4xl sm:text-5xl tracking-tight"> Hi, I'm {SITE.title} 👋</span>
        <span class="text-muted-foreground font-light text-xl sm:text-2xl block tracking-wide text-balance">
          and I love making thoughtful mobile apps 💗
        </span>
      </h1>
      <div class="pro text-muted-foreground text-pretty">
        <p>
          I’m a software engineer who crafts beautiful mobile experiences with Flutter 📱. Think of me as a digital detective—I love diving
          into complex problems and hunting down the perfect solution 🕵️‍♂️. By day, I'm building scalable, pixel-perfect apps; by night, I’m a
          fan of a good thriller 🎬 and learning backend. My code is clean, my beats are heavy 🎧, and my apps are always ready for their
          close-up. ✨
        </p>
        <p>I'm always looking for new opportunities to learn and grow.</p>
        <!-- <p>
          This theme is inspired by <a href="https://github.com/tech-qasim" target="_blank" rel="nofollow noreferrer"> @needim</a> and redesigned
          by <a href="https://github.com/tech-qasim" target="_blank" rel="nofollow noreferrer"> @Dnzzk2</a> based on Astro.
        </p> -->
      </div>
      <div class="mt-6 flex gap-6">
        {
          SOCIAL_LINKS.map((item) => {
            return <SocialLink href={item.url} icon={item.icon} aria-label={`Link of ${item.name}`} count={item.count} label="followers" />
          })
        }
        <SocialLink href={`mailto:devmohdqasim@gmail.com`} icon="icon-[ri--mail-fill]" aria-label="Email" label="email" />
      </div>
    </div>
    {
      ENABLED && (
        <>
          <SectionDivider2 />
          <div id="spotlight" class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl">Spotlight</h2>
              <p class="text-muted-foreground mb-6 mt-1">Most recent contributions.</p>
            </div>
            <GithubContributions username={GITHUB_USERNAME} tooltipEnabled={TOOLTIP_ENABLED} client:load transition:animate="none" />
          </div>
        </>
      )
    }
    {
      SKILLS_ENABLED && SKILLS_DATA.length > 0 && (
        <>
          <SectionDivider2 />
          <div id="skills" class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl tracking-tight">Skills</h2>
              <p class="text-muted-foreground mb-6 mt-1">Here are some skills I have used:</p>
            </div>
            <SkillsShowcase skillsData={SKILLS_DATA} />
          </div>
        </>
      )
    }
    {
      WORK_EXPERIENCE_ENABLED && WORK_EXPERIENCE_DATA.length > 0 && (
        <>
          <SectionDivider2 />
          <div id="experience" class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl tracking-tight">Work Experience</h2>
              <p class="text-muted-foreground mb-6 mt-1">Here is my work experience:</p>
            </div>
            <WorkExperience workExperienceData={WORK_EXPERIENCE_DATA} />
          </div>
        </>
      )
    }
    {
      PROJECTS_ENABLED && PROJECTS_DATA.length > 0 && (
        <>
          <SectionDivider2 />
          <div id="projects" class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl tracking-tight">Projects</h2>
              <p class="text-muted-foreground mb-6 mt-1">Here are some of my projects:</p>
            </div>
            <ProjectList projects={PROJECTS_DATA} type="compact" />
          </div>
        </>
      )
    }

    {
    
          <SectionDivider2 />
          <div id="contact" class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl tracking-tight">Let's build something great together</h2>
              <p class="text-muted-foreground mb-6 mt-1">I'm always excited to collaborate on interesting projects or just have a great tech conversation!</p>
               <div class="flex justify-center">
  <a href="mailto:devmohdqasim@gmail.com"
     class="inline-flex items-center gap-2 px-4 py-2 rounded-sm bg-gray-100 dark:bg-[#191a1a] text-[#08090a] dark:text-slate-200 hover:bg-gray-200 dark:hover:bg-gray-500/10 transition-colors">
    devmohdqasim@gmail.com
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="#2563EB"
         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
         class="lucide lucide-mail w-4 h-4 mt-1">
      <rect width="20" height="16" x="2" y="4" rx="2"></rect>
      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
    </svg>
  </a>
</div>



            </div>
            
          </div>
        </>
      
    }
  </div>
</Layout>
